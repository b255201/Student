            padding-bottom: 25px;
        }

        .titTop {
            text-align: left;
            color: white;
            letter-spacing: 2.5px;
            font-size: 55px;
            font-weight: 400;
            font-family: 華康竹風體W4;
            padding: 5px;
            padding-bottom: 100px;
            margin-top: 150px;
            text-align: left;
