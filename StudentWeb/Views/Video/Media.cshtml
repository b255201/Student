<style>

    .news-zone {
        padding: 15px;
    }

        .news-zone .zone-title {
            margin: 25px 0 0;
        }

        .news-zone .news-list-item {
            padding: 25px 0;
            border-bottom: 1px solid #ddd;
            position: relative;
            -moz-transition: color 200ms;
            -o-transition: color 200ms;
            -webkit-transition: color 200ms;
            transition: color 200ms;
        }

            .news-zone .news-list-item:last-child {
                border: none;
            }

            .news-zone .news-list-item .news-intro {
                /*max-width: calc( 100% - 225px );*/
                display: inline-block;
                vertical-align: top;
                padding-left: 15px;
                font-size: 16px;
            }

                .news-zone .news-list-item .news-intro .news-title {
                    font-weight: bold;
                    font-size: 22px;
                    -moz-transition: color 200ms;
                    -o-transition: color 200ms;
                    -webkit-transition: color 200ms;
                    transition: color 200ms;
                    text-decoration: none;
                }

                .news-zone .news-list-item .news-intro .news-short {
                    color: #bbb;
                    line-height: 1.8;
                    -moz-transition: color 200ms;
                    -o-transition: color 200ms;
                    -webkit-transition: color 200ms;
                    transition: color 200ms;
                }

            .news-zone .news-list-item:hover .news-title {
                color: #df0024;
                -moz-transition: color 200ms;
                -o-transition: color 200ms;
                -webkit-transition: color 200ms;
                transition: color 200ms;
            }

            .news-zone .news-list-item:hover .news-short {
                color: #333;
                -moz-transition: color 200ms;
                -o-transition: color 200ms;
                -webkit-transition: color 200ms;
                transition: color 200ms;
            }
    .news-cover {
        width: 220px;
        height: 150px;
        background-size: cover;
        background-position: center center;
        display: inline-block;
    }

    .zone-title {
        font-size: 30px;
        font-family: serif;
        font-style: italic;
    }

    .list-zone .col-md-4 {
        position: sticky;
        top: 10px;
    }

    .list-zone .type-dark {
        display: inline-block;
        font-size: 14px;
        margin: 7px 0;
        padding: 5px 10px;
    }



    .img-card > img {
        height: 600px;
        width: 540px;
    }
    <!-- -->
    .view {
        width: 1000px;
        margin: 0px auto;
    }

    .head {
        padding: 30px 0px;
        color: #ffffff;
        background-color: #004444;
    }

    .title {
        font-weight: bold;
        font-size: 175%;
        display: inline-block;
    }

    .contact {
        float: right;
        display: inline-block;
    }

    .social {
        margin: 0px 5px;
    }


    .main {
        padding: 30px 0px;
        background-color: #eeeeee;
    }

    .block {
        width: 280px;
        height: 280px;
        padding: 10px;
        margin: 10px;
        display: inline-block;
        line-height: 40px;
        background-color: #eeffff;
        box-shadow: 0px 0px 5px #888888;
        vertical-align: top;
        text-align: left;
    }

    .block-head {
        font-weight: bold;
        font-size: 120%;
    }

    .block-main {
        margin-top: 10px;
    }

    .tit {
        text-align: center;
        color: white;
        letter-spacing: 2.5px;
        font-size: 28px;
        font-weight: 400;
        padding: 30px;
    }

    .imgst {
        width: 100%;
        height: 380px !important;
    }

    .fh5co-cards {
        padding: 0em 0 !important
    }

    .fh5co-cards {
        padding-bottom: 3em !important
    }


    @@media (max-width: 992px) {
        .fh5co-cards {
            padding: 1em 0 !important
        }

        .news-zone {
            padding: 0;
        }

            .news-zone .zone-title {
                margin-top: 10px;
                font-size: 16px;
                padding: 5px;
            }

            .news-zone .news-list-item {
                padding: 10px 0;
    
            }

                .news-zone .news-list-item .news-intro {
                    display: block;
                    max-width: none;
                    padding: 5px;
                }

                    .news-zone .news-list-item .news-intro .news-title {
                        display: block;
                        font-size: 18px;
                    }

                .news-zone .news-list-item:first-of-type, .news-zone .news-list-item:nth-of-type(2), .news-zone .news-list-item:nth-of-type(3) {
                    display: block;
                }

                    .news-zone .news-list-item:first-of-type .news-cover {
                        display: block;
                        height: 300px;
                    }

                    .news-zone .news-list-item:first-of-type .new-intro {
                        position: relative;
                        display: block;
                    }

        .event-zone {
